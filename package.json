{
  "name": "tradeversus",
  "version": "0.1.0",
  "private": true,
  "description": "TradeVersus - Skill-based PvP trading battles platform",
  "author": "TradeVersus Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter @tradeversus/api dev",
    "dev:web": "pnpm --filter @tradeversus/web dev",
    "build": "pnpm run --parallel build",
    "build:api": "pnpm --filter @tradeversus/api build",
    "build:web": "pnpm --filter @tradeversus/web build",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run --parallel lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm run --parallel typecheck",
    "test": "pnpm run --parallel test",
    "db:generate": "pnpm --filter @tradeversus/api prisma:generate",
    "db:migrate": "pnpm --filter @tradeversus/api prisma:migrate",
    "db:migrate:dev": "pnpm --filter @tradeversus/api prisma:migrate:dev",
    "db:seed": "pnpm --filter @tradeversus/api prisma:seed",
    "db:studio": "pnpm --filter @tradeversus/api prisma:studio",
    "db:reset": "pnpm --filter @tradeversus/api prisma:reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "pnpm run --parallel clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
