# ===========================================
# TradeVersus Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_URL=postgresql://tradeversus:tradeversus@localhost:5432/tradeversus

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# -------------------------------------------
# API Configuration
# -------------------------------------------
API_PORT=4000
API_HOST=0.0.0.0

# -------------------------------------------
# Frontend Configuration
# -------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# WalletConnect
# -------------------------------------------
# Get your project ID from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# -------------------------------------------
# Points & Fee System
# -------------------------------------------
WEEKLY_POOL_PERCENT=10
TEAM_FEE_PERCENT=5

# -------------------------------------------
# Battle Configuration
# -------------------------------------------
BATTLE_TICK_INTERVAL_MS=5000
BATTLE_COUNTDOWN_SECONDS=10
BATTLE_MAX_DURATION_SECONDS=300

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# -------------------------------------------
# Environment
# -------------------------------------------
NODE_ENV=development
